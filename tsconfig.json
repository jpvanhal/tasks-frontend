{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths":{
      "@orbit/coordinator": ["../node_modules/@orbit/coordinator/src"],
      "@orbit/core": ["../node_modules/@orbit/core/src"],
      "@orbit/data": ["../node_modules/@orbit/data/src"],
      "@orbit/immutable": ["../node_modules/@orbit/immutable/src"],
      "@orbit/indexeddb": ["../node_modules/@orbit/indexeddb/src"],
      "@orbit/indexeddb-bucket": ["../node_modules/@orbit/indexeddb-bucket/src"],
      "@orbit/jsonapi": ["../node_modules/@orbit/jsonapi/src"],
      "@orbit/store": ["../node_modules/@orbit/store/src"],
      "@orbit/utils": ["../node_modules/@orbit/utils/src"]
    }
  }
}
